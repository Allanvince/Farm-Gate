<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/orangeRed"
        app:strokeWidth="1dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/farm"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/farmNameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="Farm Name:"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/farmNameTextView"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Vince"
                    android:textAllCaps="true"
                    android:background="@drawable/text_background"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/locationNameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:text="Farm Location:"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:text="Nairobi"
                    android:textAllCaps="true"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/farmSizeNameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:text="Farm Size (acres): "
                    android:textSize="16sp"/>


                <TextView
                    android:id="@+id/farmSizeTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/labourersNameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="No. Of Labourers"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/numberOfLabourersTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/typesOfCropsNameKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="Types Of Crops Grown"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/typesOfCropsGrownTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>