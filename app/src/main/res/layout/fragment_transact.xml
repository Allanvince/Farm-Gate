<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Transact">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transactions"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_wallet_balance"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textColor="@color/orangeRed"
        android:textSize="16sp"
        android:drawablePadding="10dp"
        app:drawableStartCompat="@drawable/refresh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kes"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="130dp"
        />
    <TextView
        android:id="@+id/walletDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_0"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="240dp"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:layout_marginTop="135dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walletDisplay"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/transactLinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="50dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sendMoneyButton"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/arrow_send"
                android:layout_marginStart="20dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/depositMoneyButton"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/arrow_deposit"
                android:layout_marginStart="120dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_money"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deposit_money"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>